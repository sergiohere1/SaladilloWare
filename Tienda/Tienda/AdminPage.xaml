<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tienda.AdminPage">
    <ContentPage.Content>
        <StackLayout Padding="3" Orientation="Vertical">
            
            <Button Text="Precios"
                    x:Name="btnLoadXML"
                    HorizontalOptions="Start"/>

            <Label Text="Pedidos:"
                    HorizontalOptions="Center"/>

            <ListView x:Name="lstPedidosRealizados"
                      ItemsSource="{Binding Pedidos}">
            </ListView>

            <Button x:Name="btnAdminDisconnect"
                    Text="Cerrar sesión"
                    HorizontalOptions="Center"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>